    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch-client",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/JSSoft.Communication/JSSoft.Communication.Client/bin/Debug/netstandard2.1/client.dll",
            "args": [
                "--host",
                "localhost"
            ],
            "cwd": "${workspaceFolder}/JSSoft.Communication/JSSoft.Communication.Client/bin/Debug/netstandard2.1",
            "stopAtEntry": false,
            "console": "externalTerminal"
        },
        {
            "name": "launch-server",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/JSSoft.Communication/JSSoft.Communication.Server/bin/Debug/netstandard2.1/server.dll",
            "args": [
                "--verbose"
            ],
            "cwd": "${workspaceFolder}/JSSoft.Communication/JSSoft.Communication.Server/bin/Debug/netstandard2.1",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}